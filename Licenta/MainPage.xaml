<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Licenta.MainPage"
             xmlns:models="clr-namespace:Licenta.Models"
             xmlns:views="clr-namespace:Licenta.Views"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutItemIsVisible="False">

    <Grid BackgroundColor="Crimson" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Margin="0,44,0,0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Image
                Grid.Row="0"
                Source="catndog.jpg"
                SemanticProperties.Description="Cat and dog"
                HeightRequest="300"
                HorizontalOptions="Center" />
        </Grid>

        <Ellipse HeightRequest="900" WidthRequest="800" Margin="0,0,0,-450" Fill="white" Grid.Row="1" HorizontalOptions="FillAndExpand" />
     
        <Grid Margin="0,110,0,0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <VerticalStackLayout Background="White" Grid.Row="0">
                <Label HorizontalOptions="Center" Margin="0,15,0,0" FontFamily="PoetsenOne" FontSize="26" Grid.Row="1" Text="Your next bestfriend is waiting for you!" />
            </VerticalStackLayout>

            <Button Grid.Row="1"
                x:Name="GetStartedBtn"
                Text="Get Started"
                FontSize="26"
                BackgroundColor="Black"
                Margin="32,16,32,32"
                HeightRequest="70"
                Command="{Binding GetStartedCommand}"
                CornerRadius="20"
                VerticalOptions="End"
                FontFamily="PoetsenOne"
                SemanticProperties.Hint="Loads into the app"
                HorizontalOptions="FillAndExpand" >
                <Button.Shadow>
                    <Shadow Brush="black"
                    Offset="00,20"
                    Radius="20"
                    Opacity="0.7" />
                </Button.Shadow>
            </Button>

        </Grid>
    </Grid>

</ContentPage>
